<p id="notice"><%= notice %></p>

<h1>Thank you for your orders page</h1>

<table class="table">
  <thead class="thead thead-default">
    <tr>
      <th>Food item</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Quantity</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.food_item.name %></td>
        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.email %></td>
        <td><%= order.address %></td>
        <td><%= order.quantity %></td>
        <td><%= order.created_at.strftime('%c') %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

Total: $<%= @total %> <br/>

<%= link_to 'New Order', new_order_path %>
